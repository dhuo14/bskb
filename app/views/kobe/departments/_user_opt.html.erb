<%= alert_dialog("reset_password_div",'',"重置密码") %>

<script type="text/javascript">
$(document).ready(function(){
	var reset_password_rules = {
    "user[login]": { required: true, maxlength: 20, minlength: 6, remote: { url: '/users/valid_user_login', type: "post" } },
    "user[password]": { required: true, maxlength: 20, minlength: 6 },
    "user[password_confirmation]": { required: true, maxlength: 20, minlength: 6, equalTo: '#user_password' },
  };
  validate_form_rules("#reset_password_div_form", reset_password_rules);

  var freeze_user_rules = {
  	"opt_liyou": { required: true, minlength: 6 }
  }
	validate_form_rules("#freeze_user_div_form", freeze_user_rules);
});
</script>