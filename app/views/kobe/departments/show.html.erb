<div class="panel-heading overflow-h">
	<h2 class="panel-title heading-sm pull-left">
	<i class="fa fa-group"></i> <%= raw "#{@dep.name} #{@dep.status_badge}" %>
	</h2>
	<div class='pull-right'>
		<%= btn_group(@dep.cando_list,false) %>
	</div>
</div>

<div class="show_ajax_div">

<%= show_tips(@dep.get_tips.blank? ? 'tips' : 'error', @dep.get_tips.blank? ? '恭喜您！' : '很抱歉！', @dep.get_tips.blank? ? "账户信息已填写完整，请点击[提交]，提交并等待审核。" : @dep.get_tips) if Department.get_status_attributes(@dep.status,1)[0] == '资料未填写' %>

<%=show_tabs(@arr.unshift({ title: "详细信息", icon: "fa-info", content: render(partial: 'show_info') }))%>

</div>

<%= modal_dialog("opt_dialog") %>